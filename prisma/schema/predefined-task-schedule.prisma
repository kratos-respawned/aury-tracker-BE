enum ScheduleType {
  DAILY
}

model PredefinedTaskSchedule {
  id                String       @id @default(cuid())
  predefinedTaskId  String
  scheduleType      ScheduleType
  scheduleOn        String // e.g., "09:30", "14:00" or day specification
  
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  // Relations
  predefinedTask    PredefinedTask @relation(fields: [predefinedTaskId], references: [id], onDelete: Cascade)
  tasks             Task[]

  @@map("PredefinedTaskSchedule")
}

