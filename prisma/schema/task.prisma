model Task {
  id          String   @id @default(cuid())
  taskId      String
  scheduledOn DateTime
  duration    Int // Duration in minutes
  status      String // e.g., "pending", "in_progress", "completed", "cancelled"
  assignedTo  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  predefinedTask PredefinedTask @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user           User?          @relation(fields: [assignedTo], references: [id], onDelete: Cascade)

  @@map("Task")
}
